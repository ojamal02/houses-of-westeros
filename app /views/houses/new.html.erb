<h1> Add House to Database </h1>

<% unless @house.errors.empty? %>
  <div>
    <%= @house.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= form_for(@house) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_area :author%>
  </div>

  <div class="field">
    <%= f.label :source_material %><br />
    <%= f.text_area :source_material%>
  </div>

  <div class="field">
    <%= f.label :motto %><br />
    <%= f.text_area :motto%>
  </div>

  <div class="field">
    <%= f.label :sigil %><br />
    <%= f.text_area :sigil%>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p><%= link_to "Back", houses_path %></p>
