<h1> Add Member to House </h1>

<% unless @member.errors.empty? %>
  <div>
    <%= @member.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= form_for [@house, @member] do |f| %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_area :last_name%>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_area :title%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p><%= link_to "Back", houses_path %></p>
